<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id='@+id/anan'
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#edebe9"
    android:gravity="center"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:fontFamily="BKoodak"
        android:gravity="center"
        android:text="إِنَّ اللَّهَ یَرْزُقُ مَنْ یَشَآءُ بِغَیْرِ حِسَابٍ "
        android:textColor="#30A96F"
        android:textSize="23dp"
        tools:text="kkjkjkjk" />

    <TextView
        android:id="@+id/wellcome"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_weight="0.2"
        android:fontFamily=""
        android:gravity="center"
        android:text="خوش آمدید!"
        android:textColor="#30A96F"
        android:textSize="19dp"
        tools:text="kkjkjkjk" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:indeterminateTint="#30A96F" />


</LinearLayout>
